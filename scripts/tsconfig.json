{
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": ["es2020"],
    "target": "es2019",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["../src/*"]
    },
    "types": ["node"],
    "useUnknownInCatchVariables": false
  },
  "include": ["./**/*.ts"]
}
