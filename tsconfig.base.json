{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "Node",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@app/*": ["./src/*"],
      "@qa/*": ["./playwright/*"],
      "@storybook-decorators/*": ["./.storybook/decorators/*"],
      "@test/*": ["./test/*"]
    }
  }
}
